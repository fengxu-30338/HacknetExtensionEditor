{
  "name": "hacknetextensionhelper",
  "displayName": "HacknetExtensionHelper",
  "description": "hacknet extension write helper",
  "version": "0.4.3",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "icon": "resources/icon.png",
  "repository": {
    "url": "https://github.com/fengxu-30338/HacknetExtensionEditor.git"
  },
  "publisher": "fengxu30338",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "hacknetNodeViewer",
          "name": "Hacknet节点查看",
          "icon": "resources/NodeView/node.svg",
          "visibility": "visible",
          "when": "hacknetextensionhelper.HasCodeHintFile"
        },
        {
          "id": "hacknetNodeRelationViewer",
          "name": "Hacknet节点关系查看",
          "icon": "resources/NodeView/node.svg",
          "visibility": "visible",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsComputer"
        }
      ]
    },
    "commands": [
      {
        "command": "hacknetextensionhelper.createExtensionProjectTemplate",
        "title": "创建Hacknet扩展项目模板"
      },
      {
        "command": "hacknetextensionhelper.createEditorHintFile",
        "title": "创建Hacknet编辑器提示文件"
      },
      {
        "command": "hacknetextensionhelper.refreshHintFile",
        "title": "重新读取Hacknet提示文件内容"
      },
      {
        "command": "hacknetextensionhelper.themeDebug",
        "title": "调试Hacknet主题文件"
      },
      {
        "command": "hacknetextensionhelper.lookUpTutorialDoc",
        "title": "查看Hacknet文件编辑教程"
      },
      {
        "command": "hacknetextensionhelper.openXmlFile",
        "title": "打开Hacknet xml文件并定位到node path处"
      },
      {
        "command": "hacknetextensionhelper.openSelectHacknetExtensionFolder",
        "title": "选择本地的Hacknet扩展文件夹打开"
      },
      {
        "command": "hacknetextensionhelper.triggerHint",
        "title": "基于Hacknet文件当前上下文给出编辑器提示"
      },
      {
        "command": "hacknetextensionhelper.createComputerFile",
        "title": "创建Computer文件",
        "category": "创建Hacknet资源文件"
      },
      {
        "command": "hacknetextensionhelper.createPeopleFile",
        "title": "创建People文件",
        "category": "创建Hacknet资源文件"
      },
      {
        "command": "hacknetextensionhelper.createActionFile",
        "title": "创建Action文件",
        "category": "创建Hacknet资源文件"
      },
      {
        "command": "hacknetextensionhelper.createFactionFile",
        "title": "创建Faction文件",
        "category": "创建Hacknet资源文件"
      },
      {
        "command": "hacknetextensionhelper.createMissionFile",
        "title": "创建Mission文件",
        "category": "创建Hacknet资源文件"
      },
      {
        "command": "hacknetextensionhelper.createHackerScriptFile",
        "title": "创建HackerScript文件",
        "category": "创建Hacknet资源文件"
      },
      {
        "command": "hacknetextensionhelper.createThemeFile",
        "title": "创建Theme主题文件",
        "category": "创建Hacknet资源文件"
      },
      {
        "command": "hacknetextensionhelper.HotReplace.EnterExtension",
        "title": "操控Hacknet进入当前扩展",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/EnterExt.svg",
          "light": "resources/HotReplace/Icon/light/EnterExt.svg"
        }
      },
      {
        "command": "hacknetextensionhelper.HotReplace.HotReloadComputer",
        "title": "操控Hacknet重载当前计算机文件到游戏",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/ReloadFile.svg",
          "light": "resources/HotReplace/Icon/light/ReloadFile.svg"
        }
      },
      {
        "command": "hacknetextensionhelper.HotReplace.ConnectComputerAndGrantAdmin",
        "title": "操控Hacknet连接当前计算机并授予管理员权限",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/Admin.svg",
          "light": "resources/HotReplace/Icon/light/Admin.svg"
        }
      },
      {
        "command": "hacknetextensionhelper.HotReplace.HotReloadMission",
        "title": "操控Hacknet重载当前Mission文件到游戏",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/ReloadFile.svg",
          "light": "resources/HotReplace/Icon/light/ReloadFile.svg"
        }
      },
      {
        "command": "hacknetextensionhelper.HotReplace.HotReloadMissionAndClearOldAction",
        "title": "操控Hacknet重载当前Mission文件到游戏并清空已加载的Action",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/Reload.svg",
          "light": "resources/HotReplace/Icon/light/Reload.svg"
        }
      },
      {
        "command": "hacknetextensionhelper.HotReplace.HotReloadAction",
        "title": "操控Hacknet重载当前Action文件到游戏",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/ReloadFile.svg",
          "light": "resources/HotReplace/Icon/light/ReloadFile.svg"
        }
      },
      {
        "command": "hacknetextensionhelper.HotReplace.HotReloadActionAndClearOldAction",
        "title": "操控Hacknet重载当前Action文件到游戏并清空已加载的Action",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/Reload.svg",
          "light": "resources/HotReplace/Icon/light/Reload.svg"
        }
      },
      {
        "command": "hacknetextensionhelper.HotReplace.HotReloadTheme",
        "title": "操控Hacknet重载当前Theme文件到游戏",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/ReloadFile.svg",
          "light": "resources/HotReplace/Icon/light/ReloadFile.svg"
        }
      },
      {
        "command": "hacknetextensionhelper.HotReplace.HotReloadFaction",
        "title": "操控Hacknet重载当前Faction文件到游戏",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/ReloadFile.svg",
          "light": "resources/HotReplace/Icon/light/ReloadFile.svg"
        }
      },
      {
        "command": "hacknetextensionhelper.HotReplace.HotReloadPeople",
        "title": "操控Hacknet重载所有People文件到游戏",
        "category": "Hacknet HotReplace",
        "icon": {
          "dark": "resources/HotReplace/Icon/dark/ReloadFile.svg",
          "light": "resources/HotReplace/Icon/light/ReloadFile.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "hacknetextensionhelper.triggerHint",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus"
      }
    ],
    "configuration": [
      {
        "title": "Hacknet提示文件设置",
        "properties": {
          "hacknetextensionhelperconfig.hintFile.autoRefresh": {
            "type": "boolean",
            "default": "true",
            "description": "监听提示文件改变后自动刷新提示内容"
          }
        }
      },
      {
        "title": "Hacknet视图设置",
        "properties": {
          "hacknetextensionhelperconfig.viewer.showTagDescInEditor": {
            "type": "boolean",
            "default": "true",
            "description": "在编辑器中显示标签的作用描述"
          }
        }
      },
      {
        "title": "Hacknet热替换设置",
        "properties": {
          "hacknetextensionhelperconfig.hotReplace.hacknetExePath": {
            "type": "string",
            "default": "auto",
            "description": "Hacknet可执行文件路径(自动查找时为auto)"
          },
          "hacknetextensionhelperconfig.hotReplace.hacknetExeStartArgs": {
            "type": "string",
            "default": "-enabledebug",
            "description": "Hacknet可执行文件的启动参数：\n-disableweb: 不渲染html网页\n-disablebackground: 不渲染背景\n-altmonitor: 副屏显示\n-enablefc: 强制完成任务\n-enabledebug: 开启调试模式\n-allowextpublish: 允许发布扩展\n-extstart ${path}:自启动扩展，path为扩展所在路径"
          },
          "hacknetextensionhelperconfig.hotReplace.executeActionType": {
            "type": "string",
            "default": "orderExecute",
            "description": "动态执行Action的方式",
            "enum": [
              "orderExecute",
              "parallelExecute"
            ],
            "enumDescriptions": [
              "按顺序执行Action",
              "并行执行Action"
            ]
          }
        }
      }
    ],
    "webview": {
      "allowedScriptDomains": [
        "vscode-resource:"
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "hacknetextensionhelper.HotReplace.EnterExtension",
          "group": "navigation@0",
          "when": "hacknetextensionhelper.HasCodeHintFile"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadComputer",
          "group": "navigation@1",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsComputer"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.ConnectComputerAndGrantAdmin",
          "group": "navigation@2",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsComputer"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadMission",
          "group": "navigation@3",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsMission"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadMissionAndClearOldAction",
          "group": "navigation@4",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsMission"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadAction",
          "group": "navigation@5",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsAction"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadActionAndClearOldAction",
          "group": "navigation@6",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsAction"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadTheme",
          "group": "navigation@7",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsTheme"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadFaction",
          "group": "navigation@8",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsFaction"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadPeople",
          "group": "navigation@9",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsPeople"
        }
      ],
      "editor/context": [
        {
          "submenu": "hacknetextensionhelper/HotReplace",
          "group": "navigation@1",
          "when": "hacknetextensionhelper.HasCodeHintFile"
        }
      ],
      "hacknetextensionhelper/HotReplace":[
        {
          "command": "hacknetextensionhelper.HotReplace.EnterExtension",
          "group": "navigation@0",
          "when": "hacknetextensionhelper.HasCodeHintFile"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadComputer",
          "group": "navigation@1",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsComputer"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.ConnectComputerAndGrantAdmin",
          "group": "navigation@2",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsComputer"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadMission",
          "group": "navigation@3",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsMission"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadMissionAndClearOldAction",
          "group": "navigation@4",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsMission"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadAction",
          "group": "navigation@5",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsAction"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadActionAndClearOldAction",
          "group": "navigation@6",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsAction"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadTheme",
          "group": "navigation@7",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsTheme"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadFaction",
          "group": "navigation@8",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsFaction"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadPeople",
          "group": "navigation@9",
          "when": "hacknetextensionhelper.HasCodeHintFile && hacknetextensionhelper.CurrentIsPeople"
        }
      ],
      "explorer/context": [
        {
          "submenu": "hacknetextensionhelper/createHacknetResourceFile",
          "group": "createHacknetResourceFile",
          "when": "explorerResourceIsFolder && hacknetextensionhelper.HasCodeHintFile"
        },
        {
          "submenu": "hacknetextensionhelper/ExtensionFunction",
          "group": "ExtensionFunction",
          "when": "explorerResourceIsFolder"
        }
      ],
      "hacknetextensionhelper/createHacknetResourceFile": [
        {
          "command": "hacknetextensionhelper.createComputerFile",
          "group": "createHacknetResourceFile@1",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "hacknetextensionhelper.createPeopleFile",
          "group": "createHacknetResourceFile@7",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "hacknetextensionhelper.createActionFile",
          "group": "createHacknetResourceFile@3",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "hacknetextensionhelper.createFactionFile",
          "group": "createHacknetResourceFile@4",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "hacknetextensionhelper.createMissionFile",
          "group": "createHacknetResourceFile@2",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "hacknetextensionhelper.createHackerScriptFile",
          "group": "createHacknetResourceFile@6",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "hacknetextensionhelper.createThemeFile",
          "group": "createHacknetResourceFile@5",
          "when": "explorerResourceIsFolder"
        }
      ],
      "hacknetextensionhelper/ExtensionFunction": [
        {
          "command": "hacknetextensionhelper.openSelectHacknetExtensionFolder",
          "group": "ExtensionFunction@1",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "hacknetextensionhelper.createExtensionProjectTemplate",
          "group": "ExtensionFunction@2",
          "when": "explorerResourceIsFolder"
        }
      ],
      "commandPalette": [
        {
          "command": "hacknetextensionhelper.createComputerFile",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.createPeopleFile",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.createActionFile",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.createFactionFile",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.createMissionFile",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.createThemeFile",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.createHackerScriptFile",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.lookUpTutorialDoc",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.openXmlFile",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.createExtensionProjectTemplate",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.EnterExtension",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadComputer",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.ConnectComputerAndGrantAdmin",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadMission",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadMissionAndClearOldAction",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadAction",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadActionAndClearOldAction",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadTheme",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadFaction",
          "when": "false"
        },
        {
          "command": "hacknetextensionhelper.HotReplace.HotReloadPeople",
          "when": "false"
        }
      ]
    },
    "submenus": [
      {
        "id": "hacknetextensionhelper/createHacknetResourceFile",
        "label": "创建Hacknet资源文件",
        "when": "explorerResourceIsFolder"
      },
      {
        "id": "hacknetextensionhelper/ExtensionFunction",
        "label": "Hacknet扩展项目",
        "when": "explorerResourceIsFolder"
      },
      {
        "id": "hacknetextensionhelper/HotReplace",
        "label": "Hacknet热重载",
        "when": "&& hacknetextensionhelper.HasCodeHintFile"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vitest --run"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.5",
    "lodash": "^4.17.21",
    "minimatch": "^9.0.5",
    "moo": "^0.5.2"
  }
}
